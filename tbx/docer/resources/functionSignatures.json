{
    "_schemaVersion": "1.0.0",
    "docerconvert": {
        "inputs": [
            {
                "mutuallyExclusiveGroup": [
                    {
                        "name": "md",
                        "kind": "required",
                        "type": "file=*.md",
                        "purpose": "Markdown document",
                        "repeating": true
                    },
                    {
                        "name": "md",
                        "kind": "required",
                        "type": [
                            "char",
                            "choices={'*.md','**/*.md'}"
                        ],
                        "purpose": "Markdown document common wildcard",
                        "repeating": false
                    },
                    {
                        "name": "md",
                        "kind": "required",
                        "purpose": "Markdown document other wildcard",
                        "repeating": false
                    }
                ]
            },
            {
                "name": "Stylesheets",
                "kind": "namevalue",
                "type": "file=*.css",
                "purpose": "CSS stylesheet"
            },
            {
                "name": "Scripts",
                "kind": "namevalue",
                "type": "file=*.css",
                "purpose": "JavaScript script"
            },
            {
                "name": "Root",
                "kind": "namevalue",
                "type": "folder",
                "purpose": "root folder"
            }
        ]
    },
    "docerrun": {
        "inputs": [
            {
                "mutuallyExclusiveGroup": [
                    {
                        "name": "html",
                        "kind": "required",
                        "type": "file=*.html",
                        "purpose": "HTML document",
                        "repeating": true
                    },
                    {
                        "name": "html",
                        "kind": "required",
                        "type": [
                            "char",
                            "choices={'*.html','**/*.html'}"
                        ],
                        "purpose": "HTML document common wildcard",
                        "repeating": false
                    },
                    {
                        "name": "html",
                        "kind": "required",
                        "purpose": "HTML document other wildcard",
                        "repeating": false
                    }
                ]
            },
            {
                "name": "Level",
                "kind": "namevalue",
                "type": [
                    "double",
                    "choices={0,1,2,3,4,5,6}"
                ],
                "purpose": "batching level"
            }
        ]
    }
}